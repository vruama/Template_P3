<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPSOne.MainPage"
             Title="Promover Saúde">
  
    <StackLayout BackgroundColor="White" >        
        <Image Source="foto.jpg"/>
        <Button Text="       Login       " x:Name="Next" Clicked="Proximo" VerticalOptions="CenterAndExpand" BorderColor="Black" BorderWidth="2" HorizontalOptions="Center" BorderRadius="10" BackgroundColor="White"/>
        <Button Text="Cadastre-se" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" BorderRadius="10" BackgroundColor="Black" TextColor="White"/>
        <Label FontSize="9" Padding="50,50">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Projeto Faculdade FECAP - https://github.com/promoversaude" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
